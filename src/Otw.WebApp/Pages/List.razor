@page "/list"
@using Otw.Core.Domain
@inject IWordsRepository WordsRepository

<h3>List</h3>

@if (_data == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <tbody>
        @foreach (var word in _data)
        {
            <tr>
                <td>@word.Value</td>
                <td>@word.Translation</td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    private ICollection<WordEntity>? _data;

    protected override async Task OnInitializedAsync()
    {
        _data = await WordsRepository.GetAllAsync();
    }
}
