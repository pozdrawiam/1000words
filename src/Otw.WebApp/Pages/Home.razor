@page "/"
@using Otw.Core.Application
@using Otw.Core.Domain
@inject NavigationManager Navigation
@inject ILocalStorageService Storage

@code {
    
    protected override async Task OnInitializedAsync()
    {
        var learnStartedValue = await Storage.GetItemAsync(ApplicationConsts.LearnStartedKey);

        Navigation.NavigateTo(
            learnStartedValue == ApplicationConsts.LearnStartedValue ? 
                "/learn" : "/about");
    }

}
