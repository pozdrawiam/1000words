@page "/about"
@inject NavigationManager Navigation

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3 class="text-center mb-4">O aplikacji</h3>

            <p class="lead">
                Aplikacja do nauki
                <strong>1000 najpopularniejszych słówek angielskich</strong>.
                Stworzona z myślą o osobach, które chcą w prosty i skuteczny sposób
                poszerzyć swoje słownictwo i utrwalić podstawowe wyrażenia w języku angielskim.
            </p>

            <h3 class="mt-4 mb-3">Funkcje</h3>
            <ul class="mb-4">
                <li>tryb nauki</li>
                <li>tryb sprawdzania</li>
                <li>zapamiętywanie postępu w pamięci przeglądarki</li>
                <li>responsywny interfejs – działa zarówno na komputerze, jak i telefonie</li>
                <li>automatyczny wygląd ciemny/jasny</li>
            </ul>

            <div class="text-center mt-4">
                <button class="btn btn-primary btn-lg"
                        @onclick="StartLearning">
                    Zacznij naukę
                </button>
            </div>

            <div class="text-center mt-4">
                <a href="https://github.com/pozdrawiam/1000words"
                   target="_blank" rel="noopener noreferrer">
                    Kod projektu na GitHub
                </a>
            </div>
        </div>
    </div>
</div>

@code {

    private void StartLearning()
    {
        Navigation.NavigateTo("/learn");
    }

}
